    <script src="{{roote}}/local/powerschool/js/statitisquefiltrer.js"></script>
    <script src="{{roote}}/local/powerschool/js/circulaires.js"></script>
    <script src="{{roote}}/local/powerschool/js/statistique.js"></script>
    <script src="{{roote}}/local/powerschool/js/statistiquenotee.js"></script>
