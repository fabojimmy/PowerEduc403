<link rel="stylesheet" href="{{roote}}/local/powerschool/css/style.css">

<h1 class="mx-5 my-5">Inscription de cours</h1>
<form action="{{inpf}}?id=4" method="GET">
{{{from}}}
    <div class="d-flex justify-content-around" style="margin-top:35px">
              <div class="col-2">
                  <label class="labelsta"> Année</label>
                  <select class="form-control annee1" name="annee">
                  <option value=""></option>
                  {{#annee}}
                    <option value="{{id}}">{{datedebut}}-{{datefin}}</option>
                  {{/annee}}
                  </select>
              </div>
              <div class="col-2">
                  <label class="labelsta"> Etablissement</label>
                  <select class="form-control campus1" name="idca">
                  <option value=""></option>
                  {{#campus}}
                  <option value="{{id}}">{{libellecampus}}</option>
                  {{/campus}}

                  </select>
              </div>
              <div class="col-2">
                  <label class="labelsta"> Filiere</label>
                  <select class="form-control filiere1" name="filiere">
                  <option value=""></option>
                  {{#filiere1}}
                    <option value="{{id}}">{{libellefiliere}}</option>
                  {{/filiere1}}
                  </select>
              </div>
              <div class="col-2">
                  <label class="labelsta"> Specialite/Classe</label>
                  <select class="form-control specialite1" name="specialite">
                  <option value=""></option>
                  {{#specialite1}}
                  <option value="{{id}}">{{libellespecialite}}</option>
                  {{/specialite1}}
                  </select>
              </div>
              <div class="col-2">
                  <label class="labelsta"> Cycle</label>
                  <select class="form-control cycle1" name="cycle">
                    <option></option>
                  {{#cycle1}}
                  <option value="{{id}}">{{libellecycle}}</option>
                  {{/cycle1}}
                  </select>
              </div>
              
      </div> 
    {{! <div class="d-flex justify-content-around" style="margin-top:35px">
              <div class="col-2">
                  <label> Genre</label>
                  <select class="form-control" name="gender">
                  <option value=""></option>
                    <option value="f">Femme</option>
                    <option value="h">Homme</option>
                  </select>
              </div>
      </div>  }}
      <input class="form-control col-1 mt-5 btn-primary" style="margin-left:30px" type="submit" name="valider" value="valider" >
</form>
<div class="table card mt-2 mb-2">
        <table class="table">
            <thead>
              <tr>
                <th scope="col">id</th>
                <th scope="col">Etudiants</th>
                <th scope="col">Année scolaire</th>
                <th scope="col">Campus</th>
                <th scope="col">Specialite</th>
                <th scope="col">Cycle</th>
                <th scope="col">Groupe Apprenant</th>
                <th scope="col">Actions</th>
              </tr>
            </thead>
            {{#inscription}}
            <tbody>
              <tr>
                
                    <th scope="row"> {{id}} </th>
                    <td>{{firstname}} {{lastname}}</td>
                    <td>{{datedebut}} - {{datefin}} </td>
                    <td>{{villecampus}} - {{libellecampus}}  </td>
                    <td>{{libellespecialite}}  ({{abreviationspecialite}})  </td>
                    <td>{{libellecycle}} ({{nombreannee}} ans) </td>
                    <td>{{numerogroup}}</td>
                    <td>
                        <input type="button" class="btn btn-danger" value="Supprimer" onclick="location.href='{{suppins}}?idins={{id}}&idca={{idca}}'">
                        <input type="button" class="btn btn-warning local_annee_delete_button" value="payer" onclick="location.href='{{inscriptionpayer}}?idins={{id}}&idfi={{idfiliere}}&idcy={{idcycle}}&idca={{idcampus}}&idsp={{idspecialite}}'">
                        <!--<input type="button" class="btn btn-info local_annee_delete_button" value="affecter" action="affectercours" onclick="location.href='{{affectercours}}?id={{id}}&idfi={{idfiliere}}&idcy={{idcycle}}&idca={{idcampus}}&idsp={{idspecialite}}'">-->
                    </td>
                </tr>
            </tbody>
            {{/inscription}}
          </table>
</div>
 <input type="hidden" class="roote" value="{{roote}}">

 <script src="{{roote}}/local/powerschool/js/jquery.js"></script>
