<html>
  <head>
      <link rel="stylesheet" href="{{root}}/local/powerschool/css/styleress.css">
  </head>
    <body> 
       
        <h1 class=" ress">{{affec}}</h1>
      <form action='{{ressourcelien}}' method="post" class="frressource">
        <div class="">
          <div class="col-8 d-flex">
              <label class="col-3" style="font-weight:600">Choisir la ressource: </label>
              <select class="form-control professeur col-4" name="ressource" onchange="if (this.value) location.href=this.value;">
                    <option value=""></option>
                    {{! <option value="{{ressourcecombo}}{{!?res=salle">Salle</option> }}
                    <option value="{{ressourcecombo}}?res=bus">Bus</option>
                    <option value="{{ressourcecombo}}?res=cantine">Cantine</option>
                    <option value="{{ressourcecombo}}?res=batiment">Batiment</option>
                    <option value="{{ressourcecombo}}?res=materiels">Materiel</option>
              </select>
          </div>
          <div class="col-8 d-flex mt-3">
              <label class="col-3" style="font-weight:600">Choisir {{libelle}}:</label>
                <select class="form-control specialite col-4" name="{{libelle}}">
                    <option value=""></option>
              {{#tarressources}}
                    <option value="{{id}}">{{libelleres}}</option>
              {{/tarressources}}
                </select>
          </div>
          <div class="col-8 d-flex mt-3">
              <label class="col-3" style="font-weight:500">Partie de l'année academie:</label>
                <select class="form-control specialite col-4" name="idsemestre">
                    <option value=""></option>
              {{#semestre}}
                    <option value="{{id}}">{{libellesemestre}}</option>
              {{/semestre}}
                </select>
          </div>
          <div class="col-8 d-flex mt-3">
              <label class="col-3" style="font-weight:600">Année academie:</label>
                <select class="form-control specialite col-4" name="idanneescolaire">
                    <option value=""></option>
              {{#annee}}
                    <option value="{{id}}">{{datedebut}}-{{datefin}}</option>
              {{/annee}}
                </select>
          </div>
          
          <div class="col-8 d-flex mt-3">
              <label class="col-3"  style="font-weight:600">Titre:</label>
                <input type="text" class="form-control col-4" name="titre">
          </div>
          

          <div class="col-8 d-flex mt-3">
              <label class="col-3" style="font-weight:600">Description:</label>
               <textarea class="col-4" name="description"></textarea>
          </div>
         
          <div class="col-8 d-flex mt-3">
              <label class="col-3" style="font-weight:500">Date debut utilisation:</label>
                <input type="date" class="form-control col-4" name="datedebuti">
          </div>
 
          <div class="col-8 d-flex mt-3">
              <label class="col-3" style="font-weight:500">Date fin utilisation:</label>
                <input type="date" class="form-control col-4" name="datefinuti">
          </div>
          <div class="col-8 d-flex mt-3">
              <label class="col-3"  style="font-weight:600">Heure de debut:</label>
                <input type="number" class="form-control col-4" name="heurdebut">
          </div>
          <div class="col-8 d-flex mt-3">
              <label class="col-3"  style="font-weight:600">Heure de fin:</label>
                <input type="number" class="form-control col-4" name="heurfin">
          </div>
          
          <div class="col-8 d-flex mt-3">
              <label class="col-3"  style="font-weight:600">Nombre de Semaine:</label>
                <input type="number" class="form-control col-4" name="nbresemaine">
          </div>
        </div>
        <input type="hidden" value="{{idca}}" name="idcampus">
        <input type="hidden" value="{{resotest}}" name="resotest">
          <div class="mx-5">
              <button class="btn btn-primary col-1 text-center mt-5" id="btn-recherche" type="submit">Enregistrer</button>
          </div>
      </form>
       <!--<div class="d-flex flex-wrap align-items-center mt-5">
          <div class="form-group fitem">  
          <input type="button" class="btn btn-info align-items-center" value="suivant" onclick="location.href='{{courssemestre}}'"> 
          </div>
        </div>-->
        <div class="table card mt-2 mb-2">
                <table class="table">
                    <thead>
                      <tr>
                        <th scope="col">Type Ressource</th>
                        <th scope="col">Libelle ressource</th>
                        <th scope="col">Title</th>
                        <th scope="col">Description</th>
                        <th scope="col">Date de debut</th>
                        <th scope="col">heure de debut</th>
                        <th scope="col">heure de fin</th>
                        <th scope="col">Année</th>
                        <th scope="col">Actions</th>
                      </tr>
                    </thead>
                    {{#datefor}}
                    <tbody>
                      <tr>
                        
                            <td>{{ressource}} </td>
                            <td>{{libellesql}}</td>
                            <td>{{titre}} </td>
                            <td>{{description}} </td>
                            <td>{{datedebuti}} </td>
                            <td>{{heurdebut}} </td>
                            <td>{{heurfin}} </td>
                            <td>{{datedebut}}-{{datefin}}</td>
                            <td>
                               <!-- <input type="button" class="btn btn-primary" value="modifier" onclick="location.href='{{affecterprofedit}}?id={{idaffe}}&idca={{idca}}'">-->
                                <a href='{{ressourcesuppr}}?id={{id}}' class="btn btn-danger"><i class="fa fa-trash"></i></a>
                                <a href='{{ressourcearchive}}?ida={{id}}&action=archiver' class="btn btn-info"><i class="fa fa-"></i>Archiver</a>

                            </td>
                        </tr>
                    </tbody>
                    
                    {{/datefor}}
                    <tfoot>
                       <tr>
                         <td>
                           <a href='{{ressourcelist}}' class="btn btn-info"><i class="fa fa-"></i>Liste de ressource Archivées</a>
                         </td>
                       </tr>
                    </tfoot>
                  </table>
        </div>
          <input type="hidden" value="{{root}}" class="roote"/>
        <hr>
    </body>
  </html>