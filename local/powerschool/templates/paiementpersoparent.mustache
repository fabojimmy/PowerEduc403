}}

<div class="d-flex flex-wrap align-items-center">

</div>

 <div class="col-2">
              <label>Choisir Apprenant</label>
              <select class="form-control specialite" name="specialite" onchange="if (this.value) location.href=this.value;">
              <option></option>
              {{#enfant}}
                <option value="{{enfantabse}}?idenf={{id}}">{{firstname}}-{{lastname}}</option>
              {{/enfant}}
              </select>
   </div>

<div class="table card mt-2 mb-2">
<h1 class="text-center">Somme à Payer</h1>
        <table class="table">
            <thead>
              <tr>
                <th scope="col">Differentes Tranches</th>
                <th scope="col">Somme</th>
                <th scope="col">Date Limité</th>
              </tr>
            </thead>
            {{#filierecycletran}}
            <tbody>
              <tr>
                
                    <td>{{libelletranche}} </td>
                    <td>{{somme}} </td>
                    <td>{{datelimite}} </td>
                </tr>
            </tbody>
            {{/filierecycletran}}
                <tr>
                   <td colspan="6"><p style="font-weight:600">TOTAL: <span class="badge badge-info" style="font-size:12px">{{somme}} fr</span> </p></td>
                </tr>
          </table>
</div>



<div class="table card mt-2 mb-2">
<h1 class="text-center">Liste des paiements</h1>
        <table class="table">
            <thead>
              <tr>
                <th scope="col">id</th>
                <th scope="col">Mode de paiement</th>
                <th scope="col">Tranche</th>
                <th scope="col">Date</th>
                <th scope="col">Montant</th>
              </tr>
            </thead>
            {{#paiement}}
            <tbody>
              <tr>
                
                    <th scope="row">fiche-{{paid}} </th>
                    <td>{{libellemodepaiement}} </td>
                    <td>{{libelletranche}} </td>
                    <td>{{timecreated}} </td>
                    <td>{{montant}} </td>
                </tr>
            </tbody>
            
            {{/paiement}}
                <tr>
                    <td colspan="5"><div class="col-12 d-flex justify-content-between">
                                      <div><p style="font-weight:600">Somme à payer: <span class="badge badge-info" style="font-size:12px">{{montant}}  fr</span> </p></div>
                                      <div><p style="font-weight:600">TOTAL: <span class="badge badge-info" style="font-size:12px">{{somme}} fr</span> </p> </div>
                                      <div><p style="font-weight:600">Reste: <span class="badge badge-warning" style="font-size:12px">{{reste}} fr</span> </p></div>
                                    </div>
                      </td>
                </tr>

          </table>
</div>

<hr>