                  {{/specialite1}}
                  </select>
              </div>
              <div class="col-2">
                  <label>Choisir Cycle</label>
                  <select class="form-control cycle1" name="cycle">
                    <option></option>
                  {{#cycle1}}
                  <option value="{{id}}">{{libellecycle}}</option>
                  {{/cycle1}}
                  </select>
              </div>
      </div> 
