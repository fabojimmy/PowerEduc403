<html>
  <head>
        <link rel="stylesheet" href="{{root}}/local/powerschool/css/styles.css">
        
  </head>
  
    <body> 
       
        <h1 class="mx-4 affecg">{{affec}}</h1>
      <form location.href='{{courssemestre}}' class="mt-5 frstatisque " method="post">
        <div class="d-flex justify-content-around statiscontent ">
          <div class="col-2 ">
              <label class="labelsta"> Professeur</label>
              <select class="form-control professeur" name="professeur">
              {{#professeur}}
                <option value="{{userid}}">{{firstname}}-{{lastname}}</option>
              {{/professeur}}
              </select>
          </div>
          <div class="col-2 ">
              <label class="labelsta"> Specialite</label>
              <select class="form-control specialite" name="specialite">
              {{#specialite}}
                <option value="{{id}}">{{libellespecialite}}</option>
              {{/specialite}}
              </select>
          </div>
         
          <div class="col-2 ">
              <label class="labelsta"> Cycle</label>
              <select class="form-control cycle" name="cycle">
              </select>
          </div>
          <div class="col-2 ">
              <label class="labelsta"> Ann√©e</label>
              <select class="form-control annee" name="annee">
              </select>
          </div>
           
          <div class="col-2 ">
              <label class="labelsta"> Cours</label>
              <select class="form-control cours" name="cours">
                <option>

                </option>
              </select>
          </div>
          
          <div class="col-2 ">
              <label class="labelsta"> Semestre</label>
              <select class="form-control semestre" name="semestre">
              </select>
          </div>
        </div>
        <div class="d-flex justify-content-around statiscontent my-5">
            {{{sallegro}}}
            <div class="col-2 ">
                <label class="labelsta"> Heure Professionel</label>
                <input type="number" class="form-control" name="heurecours">
            </div>
            <div class="col-2 ">
                <label class="labelsta">Prix unitaire</label>
                <input type="text" class="form-control" name="prixheur">
            </div>
          
        </div>
     
        <input type="hidden" value="{{idca}}" name="idcampus">
          <div class="ms-4 btn-re">
              <button class="btn btn-primary col-1 text-center mx-3 my-3 " id="btn-recherche">Enregistrer</button>
          </div>
      </form>
       <!--<div class="d-flex flex-wrap align-items-center mt-5">
