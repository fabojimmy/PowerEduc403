<input type="hidden" class="roote" value="{{roote}}">
 <form action="{{star}}?id=4" method="GET">
    <div class="d-flex justify-content-around" style="margin-top:35px">
              <div class="col-2">
                  <label>Choisir Année</label>
                  <select class="form-control annee1" name="annee">
                  <option value=""></option>
                  {{#anneee}}
                    <option value="{{id}}">{{datedebut}}-{{datefin}}</option>
                  {{/anneee}}
                  </select>
              </div>
              <div class="col-2">
                  <label>Choisir Campus</label>
                  <select class="form-control campus1" name="campus">
                  <option value=""></option>
                  {{#campus1}}
                  <option value="{{id}}">{{libellecampus}}</option>
                  {{/campus1}}

                  </select>
              </div>
              <div class="col-2">
                  <label>Choisir Filiere</label>
                  <select class="form-control filiere1" name="filiere">
                  <option value=""></option>
                  {{#filiere1}}
                    <option value="{{id}}">{{libellefiliere}}</option>
                  {{/filiere1}}
                  </select>
              </div>
              <div class="col-2">
                  <label>Choisir Specialite</label>
                  <select class="form-control specialite1" name="specialite">
                  <option value=""></option>
                  {{#specialite1}}
                  <option value="{{id}}">{{libellespecialite}}</option>
                  {{/specialite1}}
                  </select>
              </div>
              <div class="col-2">
                  <label>Choisir Cycle</label>
                  <select class="form-control cycle1" name="cycle">
                    <option></option>
                  {{#cycle1}}
                  <option value="{{id}}">{{libellecycle}}</option>
                  {{/cycle1}}
                  </select>
              </div>
      </div> 
