<h1>Liste des Apprenants</h1>

<div class="table card mt-2 mb-2">
        <table class="table">
            <thead>
              <tr>
                <th scope="col">id</th>
                <th scope="col">Etudiants</th>
                <th scope="col">Année scolaire</th>
                <th scope="col">Campus</th>
                <th scope="col">Specialite</th>
                <th scope="col">Cycle</th>
                <th scope="col">Salle</th>
                <th scope="col">Actions</th>
              </tr>
            </thead>
            {{#inscription}}
            <tbody>
              <tr>
                
                    <th scope="row"> {{id}} </th>
                    <td>{{firstname}} {{lastname}}</td>
                    <td>{{datedebut}} - {{datefin}} </td>
                    <td>{{villecampus}} - {{libellecampus}}  </td>
                    <td>{{libellespecialite}}  ({{abreviationspecialite}})  </td>
                    <td>{{libellecycle}} ({{nombreannee}} ans) </td>
                    <td>{{numerosalle}}</td>
                    <td>
                        <input type="button" class="btn btn-info local_annee_delete_button" value="affecter" action="affectercours" onclick="location.href='{{affectercours}}?id={{id}}&liste=listeet&idca={{idca}}&idsp={{idsp}}&idcy={{idcy}}&idfi={{idfi}}&idan={{idan}}&idsa={{idsa}}&idgro={{idgroupapprenant}}'">
                    </td>
                </tr>
            </tbody>
            {{/inscription}}
          </table>
</div>

